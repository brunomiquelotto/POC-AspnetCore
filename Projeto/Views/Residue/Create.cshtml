@{
    ViewData["Title"] = "Novo Resíduo";
}

@model Domain.Residue

<div class="row">
    <div class="col-xs-12">
        <h2>Novo Resíduo</h2>
    </div>
</div>

<div class="row">
    <div class="col-xs-12">
        <a asp-area="" asp-controller="Residue" asp-action="Index" class="btn btn-warning">Voltar</a>
    </div>
</div>

<div class="row">
    <form asp-action="Create" asp-controller="Residue" method="POST">
        <div class="form-group col-md-12">
            <label class="control-label" asp-for="Name">Descrição</label>
            <input type="text" class="form-control" asp-for="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group col-md-12">
            <button type="submit" class="btn btn-success">Salvar</button>
        </div>
    </form>
</div>